simple Txc5
{
    parameters:
        @display("i=block/routing");
        bool sendMsgOnInit = default(false);
        int limit = default(5);
        
    gates:
        input in;
        output out;
}


network Tictoc5
{
    submodules:
        tic: Txc5{
            parameters:
                sendMsgOnInit = true;
                @display("i=,blue");
        }
        toc: Txc5{
            parameters:
                sendMsgOnInit = false;
                @display("i=,red");
        }
    connections:
        tic.out --> {  delay = 100ms; } --> toc.in;
        tic.in <-- {  delay = 100ms; } <-- toc.out;
}