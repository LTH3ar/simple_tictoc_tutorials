simple Txc4
{
    parameters:
        @display("i=block/routing");
        bool sendMsgOnInit = default(false);
        int limit = default(5)
        
    gates:
        input in;
        output out;
}


network Tictoc4
{
    submodules:
        tic: Txc4{
            parameters:
                @display("i=,blue");
        }
        toc: Txc4{
            parameters:
                @display("i=,red");
        }
    connections:
        tic.out --> {  delay = 100ms; } --> toc.in;
        tic.in <-- {  delay = 100ms; } <-- toc.out;
}